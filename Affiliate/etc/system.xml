<?xml version="1.0"?>
<config>
	<tabs>
		<hn module="affiliate">
			<label>Hungnam</label>
			<sort_order>120</sort_order>
		</hn>
	</tabs>


	<sections>
		<affiliate translate="label" module="affiliate">
			<label>Affiliate</label>
			<tab>hn</tab>
		
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			
			<groups>
				<general translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					
					<fields>
                         <cookie_overwrite  translate="label">
                             <label>Rewrite affiliate cookie</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <comment>Affiliate cookie can be rewritten by another affiliate
                                
                            </comment>
                         </cookie_overwrite>
                         <cookie_lifetime translate="label">
                            <label>Cookie lifetime</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                           
                        </cookie_lifetime>
                        
                         <affiliate_group translate="label">
                            <label>Create affiliate account automatically for groups</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_customer_group</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </affiliate_group>
					</fields>
				</general>
			</groups>
			 <groups>
				<notification>
					<label>Notification</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<fields>
						  <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </enable>
                        
						  <email_sender>
							<label>Email sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
						</email_sender>
						<new_withdrawal_template>
						      <label>Email template for new withdrawal request</label>
							 <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
						</new_withdrawal_template>
						<success_withdrawal_template>
						      <label> Email template for succeed withdrawal request</label>
							 <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
						</success_withdrawal_template>
						<failed_withdrawal_template>
						      <label> Email template for failed withdrawal request</label>
							 <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
						</failed_withdrawal_template>
					</fields>
				</notification>
			</groups>
			
			 <groups>
			     <withdrawal>
					<label>Withdrawal</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<fields>
						  <minimum translate="label">
                            <label>Minimum amount to withdraw</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </minimum>
						  <holding_period translate="label">
                            <label>Commissions holding period</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </holding_period>
                    </fields>
                    </withdrawal>    
			 </groups>
		</affiliate>
	</sections>
</config>
                      
